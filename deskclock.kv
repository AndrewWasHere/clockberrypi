#:kivy 2.3.0
#:import host_info desk_clock.host_info.host_info

<Calendar>:
    orientation: 'vertical'
    Label:
        font_name: 'DejaVuSansMono.ttf'
        font_size: 25
        text: str(root.cal)
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.25)
        Button:
            id: prev_button
            font_size: 20
            text: '<'
            on_release: root.previous()
        Button:
            id: current_button
            font_size: 20
            text: 'today'
            on_release: root.today()
        Button:
            id: next_button
            font_size: 20
            text: '>'
            on_release: root.next()

<Chronometer>:
    orientation: 'vertical'
    Label:
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 80
            text: str(root.time)
        BoxLayout:
            orientation: 'vertical'
            Label:
                font_size: 30
                size: self.texture_size
                text: str(root.day)
            Label:
                font_size: 30
                size: self.texture_size
                text: str(root.date)
    Label:

<DeskClock>:
    cols: 2
    chronometer: chronometer_widget
    calendar: calendar_widget

    BoxLayout:
        orientation: 'vertical'
        Chronometer:
            id: chronometer_widget
            center_x: root.center_x
            center_y: root.center_y
        Label:
            size_hint: (1, 0.20)
            text_size: (self.size[0] - 50, self.size[1])
            halign: 'left'
            font_size: 15
            text: host_info()
            
    Calendar:
        id: calendar_widget
