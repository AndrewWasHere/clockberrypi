#:kivy 2.3.0

<Chronometer>:
    orientation: 'vertical'
    padding: [0, -40, 0, -40]
    Label:
        font_size: 70
        text: str(root.time)
    Label:
        font_size: 40
        size: self.texture_size
        text: str(root.day)
    Label:
        font_size: 40
        size: self.texture_size
        text: str(root.date)

<DeskClock>:
    chronometer: chronometer_widget

    Chronometer:
        id: chronometer_widget
        center_x: root.center_x
        center_y: root.center_y