#:kivy 2.3.0
#:import host_info desk_clock.host_info.host_info
#:set textcolor '#b37700'
#:set buttoncolor '#003311'

<Calendar>:
    orientation: 'vertical'
    Label:
        font_name: 'DejaVuSansMono.ttf'
        font_size: 25
        text: str(root.cal)
        color: textcolor
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.25)
        Button:
            id: prev_button
            font_size: 20
            text: '<'
            color: textcolor
            background_color: buttoncolor
            on_release: root.previous()
        Button:
            id: current_button
            font_size: 20
            text: 'today'
            color: textcolor
            background_color: buttoncolor
            on_release: root.today()
        Button:
            id: next_button
            font_size: 20
            text: '>'
            color: textcolor
            background_color: buttoncolor
            on_release: root.next()

<Chronometer>:
    orientation: 'vertical'
    Label:
    BoxLayout:
        orientation: 'vertical'
        Label:
            font_size: 80
            text: str(root.time)
            color: textcolor
        BoxLayout:
            orientation: 'vertical'
            Label:
                font_size: 30
                size: self.texture_size
                text: str(root.day)
                color: textcolor
            Label:
                font_size: 30
                size: self.texture_size
                text: str(root.date)
                color: textcolor
    Label:

<DeskClock>:
    cols: 2
    chronometer: chronometer_widget
    calendar: calendar_widget

    BoxLayout:
        orientation: 'vertical'
        Chronometer:
            id: chronometer_widget
            center_x: root.center_x
            center_y: root.center_y
        Label:
            size_hint: (1, 0.30)
            text_size: (self.size[0] - 50, self.size[1])
            halign: 'left'
            valigh: 'bottom'
            font_size: 15
            text: host_info()
            color: textcolor

    Calendar:
        id: calendar_widget
